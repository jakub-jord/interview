{
  "name": "waste-tracking-interview",
  "version": "1.0.0",
  "description": "Interview starter project for waste tracking platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build": "payload build && tsc",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "generate:types": "payload generate:types"
  },
  "dependencies": {
    "payload": "^2.20.0",
    "express": "^4.18.2",
    "@payloadcms/db-postgres": "^0.8.0",
    "@payloadcms/bundler-webpack": "^1.0.0",
    "@payloadcms/richtext-slate": "^1.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

